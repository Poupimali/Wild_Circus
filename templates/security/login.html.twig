{% extends 'base.html.twig' %}

{% block title %}Enregistrez-vous{% endblock %}

{% block body %}
    <div class="container footer-bas">
        <h1 class="h3 mb-5 font-weight-normal">Connectez-vous</h1>
        <form method="post" class="form-security">
            <label for="inputEmail" class="sr-only">Email</label>
            <input type="email" value="{{ last_username ?? ''}} " name="email" id="inputEmail" class="form-control login-form"
                   placeholder="Email" required>
            <label for="inputPassword" class="sr-only">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control login-form" placeholder="Password"
                   required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-lg btn-dark button-form" type="submit">
                <span>Valider</span>
            </button>
        </form>
    </div>

{% endblock %}
