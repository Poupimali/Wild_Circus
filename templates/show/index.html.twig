{% extends 'base.html.twig' %}

{% block title %}Show index{% endblock %}

{% block body %}
    <h1>Show index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price_adult</th>
                <th>Price_child</th>
                <th>Date</th>
                <th>Time_slot</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for show in shows %}
            <tr>
                <td>{{ show.id }}</td>
                <td>{{ show.name }}</td>
                <td>{{ show.priceAdult }}</td>
                <td>{{ show.priceChild }}</td>
                <td>{{ show.date ? show.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ show.timeSlot }}</td>
                <td>{{ show.message }}</td>
                <td>
                    <a href="{{ path('show_show', {'id': show.id}) }}">show</a>
                    <a href="{{ path('show_edit', {'id': show.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('show_new') }}">Create new</a>
{% endblock %}
