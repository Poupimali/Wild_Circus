{% block title %}Show{% endblock %}

{% block body %}
    <h1>Show</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ show.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ show.name }}</td>
            </tr>
            <tr>
                <th>Price_adult</th>
                <td>{{ show.priceAdult }}</td>
            </tr>
            <tr>
                <th>Price_child</th>
